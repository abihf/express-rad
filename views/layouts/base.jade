doctype html
block variables
html
    head(lang=locale)
        block head
            meta(charset='utf-8')
            meta(http-equiv='X-UA-Compatible', content='IE=edge')
            title= (pageTitle ? pageTitle + ' - ' : '') + appName
            if pageDesc
                meta(name='description', content=pageDesc)
            meta(name='viewport', content='width=device-width, initial-scale=1.0')
            link(rel='shortcut icon', href=assetPath('favicon.png'))
            block styles
                if env == 'production'
                    link(href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css", rel="stylesheet")
                    link(href="//maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css", rel="stylesheet")
                else
                    link(href="/assets/vendor/bootstrap/dist/css/bootstrap.css", rel="stylesheet")
                    link(href="/assets/vendor/font-awesome/css/font-awesome.css", rel="stylesheet")
                != css('styles')

    body
        block body
        block scripts
            if env == 'production'
                script(src="//code.jquery.com/jquery-2.1.4.min.js")
                script(src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js")
            else
                script(src="/assets/vendor/jquery/dist/jquery.js")
                script(src="/assets/vendor/bootstrap/dist/js/bootstrap.js")
                script(src="/assets/vendor/bootlint/index.js")
                script bootlint.showLintReportForCurrentDocument([],{problemFree:false})

            != js('application')
